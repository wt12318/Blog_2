.highlight
      position: relative
      display: block
      border-radius: 4px
      background: #e6ebf1 
      box-shadow:  0 0 0 1px #1e25351a
      padding-top: 32px !important


    &::after
      content: ' '
      position: absolute
      background: #fa625c
      box-shadow: 23px 0 #fdbc40, 45px 0 #35cd4b
      border-radius: 50%
      top:10px
      left: 15px
      height: 12px
      width: 12px
      z-index: 1
